# Flokie Flask API Template Environment Variables
# Copy this file to .env and update the values for your environment
# For production, use strong, unique values for all secrets

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Environment (development, testing, acceptance, production)
FLASK_CONFIG=development

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_USE_RELOADER=true
FLASK_USE_DEBUGGER=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# JWT Token Configuration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
JWT_REFRESH_TOKEN_EXPIRES_DAYS_REMEMBER=90

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development Database (SQLite)
DEV_DATABASE_URL=sqlite:///instance/flokie_dev.db

# Testing Database (In-memory SQLite)
TEST_DATABASE_URL=sqlite:///:memory:

# Acceptance Database
ACC_DATABASE_URL=sqlite:///instance/flokie_acc.db

# Production Database
DATABASE_URL=sqlite:///instance/flokie_prod.db

# PostgreSQL Examples (uncomment and configure as needed):
# DEV_DATABASE_URL=postgresql://flokie_user:password@localhost/flokie_dev
# ACC_DATABASE_URL=postgresql://flokie_user:password@localhost/flokie_acc
# DATABASE_URL=postgresql://flokie_user:password@localhost/flokie_prod

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# File Logging
LOG_TO_FILE=false
LOG_FILE_PATH=logs/flokie.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Request Logging
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_SLOW_REQUESTS=true

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# Email Server Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Email Features
MAIL_SUPPRESS_SEND=false
MAIL_DEBUG=false

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Flask Shell
FLASK_SHELL_CONTEXT_PROCESSOR=true

# Auto-reload
FLASK_AUTO_RELOAD=true

# Development Features
FLASK_EXPLAIN_TEMPLATE_LOADING=false

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Profiling
ENABLE_PROFILING=false
PROFILING_RESTRICTIONS=[]

# Performance Thresholds
SLOW_REQUEST_THRESHOLD=1.0
SLOW_QUERY_THRESHOLD=0.5

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Error Response Configuration
ERROR_INCLUDE_DETAILS=true
ERROR_INCLUDE_TRACEBACK=false
ERROR_INCLUDE_MESSAGE=true
ERROR_MONITORING_ENABLED=false

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_STORAGE_URL=memory://
RATE_LIMIT_DEFAULT=100 per hour

# Per-endpoint Rate Limits
RATE_LIMIT_AUTH_LOGIN=5 per minute
RATE_LIMIT_AUTH_REGISTER=3 per minute
RATE_LIMIT_PASSWORD_RESET=2 per minute

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# File Storage (AWS S3, etc.)
FILE_STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# Third-party APIs
EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Testing Settings
TESTING=false
WTF_CSRF_ENABLED=false
PRESERVE_CONTEXT_ON_EXCEPTION=false

# Test Database
TEST_DATABASE_URL=sqlite:///:memory:

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Security
PREFERRED_URL_SCHEME=https
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Production Performance
SEND_FILE_MAX_AGE_DEFAULT=31536000

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Feature Toggles
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_ADMIN_PANEL=false
FEATURE_API_DOCS=true

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================

# Application Metadata
APP_NAME=Flokie API
APP_VERSION=1.0.0
APP_DESCRIPTION=Production-ready Flask API Template

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload Limits
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development Overrides
# (These are automatically applied when FLASK_CONFIG=development)

# Testing Overrides
# (These are automatically applied when FLASK_CONFIG=testing)

# Production Overrides
# (These are automatically applied when FLASK_CONFIG=production)
# Remember to set strong secrets and proper database URLs!
