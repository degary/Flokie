# Flask API Template Environment Variables
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_CONFIG=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=true
FLASK_USE_RELOADER=true
FLASK_USE_DEBUGGER=true

# Security Keys
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database URLs
DEV_DATABASE_URL=sqlite:///dev_app.db
TEST_DATABASE_URL=sqlite:///:memory:
ACC_DATABASE_URL=sqlite:///acc_app.db
DATABASE_URL=sqlite:///prod_app.db

# For PostgreSQL (uncomment and configure as needed):
# ACC_DATABASE_URL=postgresql://user:password@localhost/flask_api_acc
# DATABASE_URL=postgresql://user:password@localhost/flask_api_prod

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# Development Tools
FLASK_SHELL_CONTEXT_PROCESSOR=true
FLASK_AUTO_RELOAD=true

# Performance Monitoring
ENABLE_PROFILING=false
SLOW_REQUEST_THRESHOLD=1.0

# Error Handling
ERROR_INCLUDE_DETAILS=true
ERROR_INCLUDE_TRACEBACK=true
ERROR_INCLUDE_MESSAGE=true
ERROR_MONITORING_ENABLED=true
