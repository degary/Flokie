# Testing Environment Configuration
FLASK_CONFIG=testing
FLASK_DEBUG=0

# Database Configuration (use in-memory SQLite for tests)
DATABASE_URL=sqlite:///:memory:

# Redis Configuration (use different DB for tests)
REDIS_URL=redis://localhost:6379/1

# Security Keys (use test keys)
SECRET_KEY=test-secret-key-for-testing-only
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only

# CORS Configuration
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=WARNING
LOG_TO_STDOUT=false

# API Configuration
API_TITLE=Flask API Template (Testing)
API_VERSION=1.0.0-test
API_DESCRIPTION=Testing instance of Flask API Template

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=50

# Rate Limiting (disabled for testing)
RATE_LIMIT_ENABLED=false

# Email Configuration (testing - use null backend)
MAIL_SUPPRESS_SEND=true
MAIL_DEFAULT_SENDER=test@example.com

# File Upload Configuration
MAX_CONTENT_LENGTH=1048576  # 1MB for tests
UPLOAD_FOLDER=test_uploads

# Testing Database Settings
SQLALCHEMY_ECHO=false
SQLALCHEMY_TRACK_MODIFICATIONS=false

# Testing Specific Settings
TESTING=true
WTF_CSRF_ENABLED=false
PRESERVE_CONTEXT_ON_EXCEPTION=false
