# Production Environment Configuration
FLASK_CONFIG=production
FLASK_DEBUG=0

# Database Configuration
DATABASE_URL=postgresql://flask_user:${POSTGRES_PASSWORD}@db:5432/flask_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=${REDIS_PASSWORD}

# Security Keys (MUST be set via environment variables)
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# CORS Configuration
CORS_ORIGINS=${CORS_ORIGINS}

# Logging Configuration
LOG_LEVEL=WARNING
LOG_TO_STDOUT=true

# API Configuration
API_TITLE=Flask API Template
API_VERSION=1.0.0
API_DESCRIPTION=Production Flask API Template

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60 per hour

# Email Configuration
MAIL_SERVER=${MAIL_SERVER}
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_DEFAULT_SENDER=${MAIL_DEFAULT_SENDER}

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Database Settings
SQLALCHEMY_ECHO=false
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_ENGINE_OPTIONS={"pool_pre_ping": true, "pool_recycle": 300, "pool_size": 10, "max_overflow": 20}

# Monitoring Configuration
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
NEW_RELIC_APP_NAME=${NEW_RELIC_APP_NAME}

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# SSL Configuration
SSL_REDIRECT=true
HSTS_ENABLED=true

# Performance Configuration
GZIP_ENABLED=true
CACHE_ENABLED=true
CACHE_DEFAULT_TIMEOUT=300
