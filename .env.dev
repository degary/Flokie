# Development Environment Configuration
FLASK_CONFIG=development
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=sqlite:///instance/dev_app.db

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379/0

# Security Keys (use simple keys for development)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_TO_STDOUT=true

# Development Tools
FLASK_DEBUG_TB_ENABLED=true
FLASK_DEBUG_TB_INTERCEPT_REDIRECTS=false

# API Configuration
API_TITLE=Flask API Template (Development)
API_VERSION=1.0.0
API_DESCRIPTION=Development instance of Flask API Template

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting (relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=1000 per hour

# Email Configuration (development - use console backend)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@localhost

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Development Database Settings
SQLALCHEMY_ECHO=true
SQLALCHEMY_TRACK_MODIFICATIONS=false
